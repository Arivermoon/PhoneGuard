<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_appmanager_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/app" />

    <TextView
        android:id="@+id/tv_appmanager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/iv_appmanager_icon"
        android:text="计算器"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_appmanager_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_appmanager_title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_appmanager_icon"
        android:text="位置"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_appmanager_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="大小"
        android:textColor="@android:color/black" />

</RelativeLayout>